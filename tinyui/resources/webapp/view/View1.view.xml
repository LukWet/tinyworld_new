<mvc:View controllerName="tinyworld.tinyui.controller.View1" xmlns:mvc="sap.ui.core.mvc" xmlns:html="http://www.w3.org/1999/xhtml"
	displayBlock="true" xmlns="sap.m">
	<App id="idAppControl">
		<pages>
			<Page title="{i18n>title}">
				<content>
					<Table id="table"
					items="{ 
					path: '/euro'
					}">
						<headerToolbar>
							<OverflowToolbar>
								<content>
									<Title text="European Countries" level="H2"/>
									<Label text="Sticky options:"/>
									<CheckBox text="ColumnHeaders" select="onSelect"/>
									<CheckBox text="HeaderToolbar" select="onSelect"/>
									<CheckBox text="InfoToolbar" select="onSelect"/>
									<ToggleButton id="toggleInfoToolbar" text="Hide/Show InfoToolbar" press="onToggleInfoToolbar"/>
								</content>
							</OverflowToolbar>
						</headerToolbar>
						<infoToolbar>
							<OverflowToolbar>
								<Label text="Wide range of EU countries"/>
							</OverflowToolbar>
						</infoToolbar>
						<columns>
							<Column minScreenWidth="Tablet" demandPopin="true">
								<Text text="Country Name"/>
							</Column>
						</columns>
						<items>
							<ColumnListItem>
								<cells>
									<Text text="{name}"/>
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>